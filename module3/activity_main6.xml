<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity6">

    <EditText
        android:id="@+id/rr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="first name"/>
    <EditText
        android:id="@+id/rr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="last name"
        android:layout_below="@id/rr1"/>
    <EditText
        android:id="@+id/rr3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="phone name"
        android:layout_below="@id/rr2"/>
    <EditText
        android:id="@+id/rr4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BOD"
        android:layout_below="@id/rr3"/>
    <EditText
        android:id="@+id/rr5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gender"
        android:layout_below="@id/rr4"/>

    <EditText
        android:id="@+id/rr6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email_address"
        android:layout_below="@id/rr5"/>
    <Button
        android:id="@+id/rr7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plase comppleted your registration"
        android:layout_marginTop="100dp"
        android:layout_below="@id/rr6"/>


</RelativeLayout>