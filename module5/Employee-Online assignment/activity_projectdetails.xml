<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".projectdetails">


    <TextView
        android:id="@+id/RegisterTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add Project"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#B8B3B3"
        android:background="#000000"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="250dp"
        app:cardBackgroundColor="#4A6CB5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp">
            <EditText
                android:id="@+id/edtProjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:textColor="@color/black"
                android:hint="Project Name" />


            <EditText
                android:id="@+id/edtMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:textColor="@color/black"
                android:hint="Project Team Members" />

            <EditText
                android:id="@+id/edtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:textColor="@color/black"
                android:hint="Project Description" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnAddProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:backgroundTint="@color/black"
        android:textColor="#898f9c"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>


</LinearLayout>